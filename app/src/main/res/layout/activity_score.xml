<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Заголовок игры -->
    <TextView
        android:id="@+id/GameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Game Title"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textAppearance="@android:style/TextAppearance.Widget.TabWidget" />

    <!-- Описание оценки -->
    <TextView
        android:id="@+id/ScoreDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/GameTitle"
        android:text="Описание оценки"
        android:textColor="#F6F5F5"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <!-- Мировые рейтинги -->
    <TextView
        android:id="@+id/GlobalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ScoreDescription"
        android:text="Мировые рейтинги"
        android:textColor="#F6F5F3"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <!-- Рейтинг игроков по миру -->
    <TextView
        android:id="@+id/GlobalScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/GlobalTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Рейтинг игроков"
        android:textColor="#F6F6F6"
        android:textSize="20sp"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <!-- Лучшие результаты игроков -->
    <TextView
        android:id="@+id/UserTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/GlobalScores"
        android:text="Лучшие результаты игроков"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <!-- Рейтинг пользователей -->
    <TextView
        android:id="@+id/UserScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/UserTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Рейтинг пользователей"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView" />

    <!-- Кнопка возврата -->
    <Button
        android:id="@+id/ReturnButton"
        style="@android:style/Widget.DeviceDefault.Button.Small"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_below="@id/UserScores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_shape_round"
        android:text="Назад"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>
